<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4E7"
    tools:context=".HomeActivity">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="15dp"
        >

        <RelativeLayout
            android:layout_marginBottom="30dp"
            android:id="@+id/MenuToko"
            android:layout_width="471dp"
            android:layout_height="96dp"
            android:background="#A38661"
            app:layout_constraintEnd_toEndOf="@+id/MenuInfo"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/MenuInfo"
            tools:layout_editor_absoluteY="366dp">

            <ImageView
                android:id="@+id/groceryimageView"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/grocery" />

            <TextView
                android:id="@+id/menutextView"
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="57dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="28dp"
                android:layout_toEndOf="@+id/groceryimageView"
                android:text="Daftar Toko Sayuran"
                android:textColor="#DFD3CC"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="70dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/MenuToko"
            android:id="@+id/MenuInfo"
            android:layout_width="471dp"
            android:layout_height="90dp"
            android:background="#A38661"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.357"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MenuToko"
            app:layout_constraintVertical_bias="0.076">

            <ImageView
                android:id="@+id/infoimageView"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/info"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="99dp" />

            <TextView
                android:id="@+id/infotextView"
                android:layout_width="249dp"
                android:layout_height="31dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="66dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="63dp"
                android:layout_marginBottom="35dp"
                android:layout_toEndOf="@+id/infoimageView"
                android:text="Informasi Menarik"
                android:textColor="#DFD3CC"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="108dp" />

        </RelativeLayout>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>



