<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="347dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        android:background="#DDC4A5"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="75dp"
            android:layout_height="85dp"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/info" />

        <TextView
            android:id="@+id/infortextView"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="43dp"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="24dp"
            android:layout_toEndOf="@+id/imageView2"
            android:text="Manfaat Sayur"
            android:textColor="#8F7866"
            android:textSize="22dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="347dp"
        android:layout_height="571dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="40dp"
        android:background="#E8E0D5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="238dp"
            android:text="Bayam"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="-2dp"
            android:text="Meredakan Peradangan
               Meningkatkan sistem kekebalan tubuh\nMencegah amnesia\nMenjaga kesehatan mata\nMenurunkan resiko penyakit kardiovaskular"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="91dp"
            android:layout_height="29dp"
            android:layout_below="@+id/textView3"
            android:layout_alignEnd="@+id/textView"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="0dp"
            android:text="Wortel"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="314dp"
            android:layout_height="185dp"
            android:layout_below="@+id/textView2"
            android:layout_alignEnd="@+id/textView3"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="-2dp"
            android:text="Menjaga kesehatan mata\nMengurangi resiko kanker\nMenurunkan kadar gula darah tetap normal\nMenurunkan risiko penyakit jantung\nMelancarkan pencernaan"
            android:textSize="20dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>